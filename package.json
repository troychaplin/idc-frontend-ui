  "version": "0.0.7",
  "license": "MIT",
  "private": false,
  "description": "A library template built by Vite, React, Typescript, TailwindCSS and Storybook",
  "homepage": "https://github.com/troychaplin/idc-ui-kit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/troychaplin/idc-ui-kit.git"
  },
  "bugs": {
    "url": "https://github.com/troychaplin/idc-ui-kit/issues"
  },
  "main": "dist/idc-ui-kit.umd.js",
  "module": "dist/idc-ui-kit.mjs",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/idc-ui-kit.mjs",
      "require": "./dist/idc-ui-kit.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "storybook": "storybook dev -p 6006",
    "build": "tsc && vite build",
    "build:storybook": "storybook build",
    "prettier": "prettier --write .",
    "clean": "rm -rf node_modules ; rm package-lock.json ; npm install",
    "test": "echo \"No test specified\" && exit 0",
    "prepare": "husky"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
